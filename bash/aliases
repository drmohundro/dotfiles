case $( uname -s ) in
    Linux | CYGWIN_NT-6.1-WOW64 )
        alias ls='ls --color=auto'
        ;;
    Darwin )
        export LSCOLORS="ExfxcxdxbxEgEdabagacad"
        alias ls='ls -G'
        alias vim='mvim -v'
        alias gvimdiff='mvim -d'
        ;;
esac

alias grep='grep --color'
alias diff=colordiff
alias git=hub
