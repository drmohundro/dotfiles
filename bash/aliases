case $( uname -s ) in
    Linux | CYGWIN_NT-6.1-WOW64 | MINGW32_NT-6.2 )
        alias ls='ls --color=auto'
        ;;
    Darwin )
        export LSCOLORS="ExfxcxdxbxEgEdabagacad"
        alias ls='ls -G'
        alias vim='mvim -v'
        alias gvimdiff='mvim -d'
        ;;
esac

alias grep='grep --color'
alias diff=colordiff

hash hub &>/dev/null
if [ "$?" -eq "0" ]; then
  alias git=hub
fi
