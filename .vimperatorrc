" display menu
set guioptions=m

" use the awesome bar features!
set wildoptions=auto
set complete=l

map J <C-d>
map K <C-u>

" undo backspace key mappings
map <BS> <Esc>:back<cr>
map <S-BS> <Esc>:forward<cr>

" keep CTRL+C/V
noremap <C-c> <C-v><C-c> 
noremap <C-v> <C-v><C-v> 

" stop beeping and flashing
set noerrorbell
set novisualbell

" highlight matches
set hlsearch

" default to pass-through behavior for GMail and Google Reader
autocmd LocationChange .* :js modes.passAllKeys = /mail\.google\.com/.test(buffer.URL)
autocmd LocationChange .* :js modes.passAllKeys = /www\.google\.com\/reader\/view/.test(buffer.URL)
