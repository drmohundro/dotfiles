" display menu
set guioptions=mB

" use the awesome bar features!
set wildoptions=auto
set complete=l

map J <C-d>
map K <C-u>

" undo backspace key mappings
map <BS> <Esc>:back<cr>
map <S-BS> <Esc>:forward<cr>

" keep CTRL+C/V
noremap <C-c> <C-v><C-c> 
noremap <C-v> <C-v><C-v> 

" stop beeping and flashing
set noerrorbells
set novisualbell

" highlight matches
set hlsearch

" default to pass-through behavior for GMail and Google Reader
autocmd LocationChange .* :js modes.passAllKeys = /(mail\.google\.com)|(www\.google\.com\/reader\/view)/.test(buffer.URL)

" disable all audible beeps
javascript liberator.beep = function () { return false; }
